<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lock="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gesturepwd_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gesture_background"
    android:orientation="vertical" >

    <View 
        android:layout_width="wrap_content"
        android:layout_height="20.0dip"
        android:layout_weight="1"
        />
    
    <ImageView
        android:id="@+id/gesturepwd_face"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="center_horizontal"
        android:padding="4.0dip"
        android:scaleType="fitXY"
        android:visibility="gone"
         />
    
    <LinearLayout
        android:id="@+id/gesturepwd_setting_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/gesture_height" >

            <View
                android:id="@+id/gesturepwd_setting_preview_0"
                android:layout_width="@dimen/gesture_height"
                android:layout_height="@dimen/gesture_height"
                android:background="@drawable/bg_white_stoke_circle" />

            <View
                android:id="@+id/gesturepwd_setting_preview_1"
                android:layout_width="@dimen/gesture_height"
                android:layout_height="@dimen/gesture_height"
                android:layout_marginLeft="@dimen/gesture_height"
                android:background="@drawable/bg_white_stoke_circle" />

            <View
                android:id="@+id/gesturepwd_setting_preview_2"
                android:layout_width="@dimen/gesture_height"
                android:layout_height="@dimen/gesture_height"
                android:layout_marginLeft="@dimen/gesture_height"
                android:background="@drawable/bg_white_stoke_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/gesture_height"
            android:layout_marginTop="@dimen/gesture_height" >

            <View
                android:id="@+id/gesturepwd_setting_preview_3"
                android:layout_width="@dimen/gesture_height"
                android:layout_height="@dimen/gesture_height"
                android:background="@drawable/bg_white_stoke_circle" />

            <View
                android:id="@+id/gesturepwd_setting_preview_4"
                android:layout_width="@dimen/gesture_height"
                android:layout_height="@dimen/gesture_height"
                android:layout_marginLeft="@dimen/gesture_height"
                android:background="@drawable/bg_white_stoke_circle" />

            <View
                android:id="@+id/gesturepwd_setting_preview_5"
                android:layout_width="@dimen/gesture_height"
                android:layout_height="@dimen/gesture_height"
                android:layout_marginLeft="@dimen/gesture_height"
                android:background="@drawable/bg_white_stoke_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/gesture_height"
            android:layout_marginTop="@dimen/gesture_height" >

            <View
                android:id="@+id/gesturepwd_setting_preview_6"
                android:layout_width="@dimen/gesture_height"
                android:layout_height="@dimen/gesture_height"
                android:background="@drawable/bg_white_stoke_circle" />

            <View
                android:id="@+id/gesturepwd_setting_preview_7"
                android:layout_width="@dimen/gesture_height"
                android:layout_height="@dimen/gesture_height"
                android:layout_marginLeft="@dimen/gesture_height"
                android:background="@drawable/bg_white_stoke_circle" />

            <View
                android:id="@+id/gesturepwd_setting_preview_8"
                android:layout_width="@dimen/gesture_height"
                android:layout_height="@dimen/gesture_height"
                android:layout_marginLeft="@dimen/gesture_height"
                android:background="@drawable/bg_white_stoke_circle" />
        </LinearLayout>
    </LinearLayout>
    

    <TextView
        android:id="@+id/gesturepwd_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="欢迎您"
        android:textColor="@color/global_white"
        android:textSize="16.0dp" />

    <TextView
        android:id="@+id/gesturepwd_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_horizontal"
        android:text="请绘制手势密码"
        android:textColor="@color/global_white"
        android:textSize="16.0dp" />

    <com.yang.assetmanage.view.LockPatternView
        android:id="@+id/gesturepwd_lockview"
        android:layout_width="320dp"
        android:layout_height="320dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10.0dip"
         />
    
     <View 
        android:layout_width="wrap_content"
        android:layout_height="20.0dip"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gesturepwd_forget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="忘记手势密码?"
            android:textColor="@color/global_white"
            android:textSize="14.0dp" />

        <TextView
            android:id="@+id/gesturepwd_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="请记住您的手势密码"
            android:textColor="@color/global_white"
            android:visibility="gone"
            android:textSize="14.0dp" />

    </LinearLayout>

</LinearLayout>